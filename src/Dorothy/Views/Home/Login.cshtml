@model Dorothy.ViewModels.Home.LoginViewModel

@{
    ViewBag.BodyCssClass = "login";
}

<div class="row">
    <div class="col-md-6">

        <h2>Christina und Hannes heiraten</h2>

        <p>
            Auf dieser Seite findest du alle wichtigen (und weniger wichtigen) Informationen zur Hochzeit gesammelt und aktuell gehalten.
        </p>

        <p>
            <b>Ohne Passwort kommst du hier aber nicht weiter</b>
        </p>

        <p>
          Als geladener Gast findest du das Passwort auf der Einladung. Solltest du Probleme haben, dann kontaktiere bitte Christina oder Hannes.
        </p>

    </div>

    <div class="col-md-6">
        <div class="well">
            <form method="POST">
                @Html.ValidationSummary()

                <div class="form-group">
                    <label for="Password" class="control-label"><span class="glyphicon glyphicon-pencil"></span> Passwort</label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Hier bitte das Passwort eingeben ..." } })
                </div>

                <input type="submit" value="Weiter" class="btn btn-success" />
            </form>
        </div>
    </div>
</div>